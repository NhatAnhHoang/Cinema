<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/define_dimen_12"
        android:src="@drawable/ic_back"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/define_dimen_18">
        <ImageView
            android:layout_width="@dimen/define_dimen_200"
            android:layout_height="@dimen/define_dimen_200"
            android:src="@drawable/changepassword"
            android:layout_marginBottom="@dimen/define_dimen_20"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/change_password"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="28sp"
            android:fontFamily="@font/mitr_regular"
            android:layout_marginBottom="@dimen/define_dimen_30"/>

        <EditText
            android:id="@+id/edt_old_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/define_dimen_50"
            android:layout_marginTop="@dimen/define_dimen_20"
            android:hint="@string/hint_password_old"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_size_small"
            android:paddingLeft="@dimen/define_dimen_10"
            android:background="@drawable/custom_edittext"
            android:fontFamily="@font/baloochettan2_regular"/>

        <EditText
            android:id="@+id/edt_new_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/define_dimen_50"
            android:layout_marginTop="@dimen/define_dimen_10"
            android:hint="@string/hint_password_new"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_size_small"
            android:paddingLeft="@dimen/define_dimen_10"
            android:background="@drawable/custom_edittext"
            android:fontFamily="@font/baloochettan2_regular"/>

        <EditText
            android:id="@+id/edt_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/define_dimen_50"
            android:layout_marginTop="@dimen/define_dimen_10"
            android:hint="@string/hint_password_confirm"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_size_small"
            android:paddingLeft="@dimen/define_dimen_10"
            android:background="@drawable/custom_edittext"
            android:fontFamily="@font/baloochettan2_regular"/>

        <Button
            android:id="@+id/btn_change_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/define_dimen_50"
            android:background="@drawable/bg_main_corner_8"
            android:text="@string/change_password"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_small"
            android:fontFamily="@font/mitr_regular"/>

    </LinearLayout>
</RelativeLayout>