<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/define_dimen_12"
        android:src="@drawable/ic_back"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/define_dimen_18">
        <ImageView
            android:layout_width="@dimen/define_dimen_200"
            android:layout_height="@dimen/define_dimen_200"
            android:src="@drawable/imagecinema"
            android:layout_marginBottom="@dimen/define_dimen_20"
            android:layout_marginTop="@dimen/define_dimen_20"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_food_title"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="28dp"
            android:fontFamily="@font/mitr_regular" />

        <EditText
            android:id="@+id/edt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/define_dimen_30"
            android:background="@drawable/bg_white_corner_6_border_gray"
            android:fontFamily="@font/mitr_light"
            android:hint="@string/hint_name"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:padding="@dimen/define_dimen_12"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_size_small" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/define_dimen_16"
            android:background="@drawable/bg_white_corner_6_border_gray"
            android:padding="@dimen/define_dimen_12">

            <EditText
                android:id="@+id/edt_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/define_dimen_10"
                android:layout_toStartOf="@+id/tv_currency"
                android:background="@color/white"
                android:hint="@string/hint_price"
                android:inputType="number"
                android:imeOptions="actionNext"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_small"
                android:fontFamily="@font/mitr_light"/>

            <TextView
                android:id="@+id/tv_currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="@string/currency"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_small"
                android:fontFamily="@font/mitr_light"/>
        </RelativeLayout>

        <EditText
            android:id="@+id/edt_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/define_dimen_16"
            android:background="@drawable/bg_white_corner_6_border_gray"
            android:hint="@string/hint_quantity"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:padding="@dimen/define_dimen_12"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_size_small"
            android:fontFamily="@font/mitr_light"
            />
        <EditText
            android:id="@+id/edt_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/define_dimen_16"
            android:background="@drawable/bg_white_corner_6_border_gray"
            android:hint="@string/hint_image"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:padding="@dimen/define_dimen_12"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_size_small"
            android:fontFamily="@font/mitr_light"/>

        <Button
            android:id="@+id/btn_add_or_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/define_dimen_40"
            android:background="@drawable/bg_main_corner_8"
            android:text="@string/action_add"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_small"
            android:fontFamily="@font/mitr_light"/>

    </LinearLayout>
</RelativeLayout>